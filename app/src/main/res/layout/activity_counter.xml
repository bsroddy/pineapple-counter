<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brendanroddy.pineapplecounter.Counter"
    android:background="#ffb74d">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pcback"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/top"
        style="@style/CustomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:layout_marginTop="64dp"
        android:text="You have seen:"/>

    <TextView
        android:id="@+id/count_view"
        style="@style/CustomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:textSize="200sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="0"/>

    <TextView
        android:layout_below="@id/count_view"
        android:id="@+id/tag"
        style="@style/CustomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:text="pineapples."/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64sp">
        <Button
            android:id="@+id/add_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginBottom="0dp"
            android:text="Add One"
            android:onClick="increment"
            android:layout_alignParentBottom="false"/>
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginBottom="0dp"
            android:text="Reset"
            android:onClick="reset"
            android:layout_alignParentBottom="false"
            />




</LinearLayout>
</RelativeLayout>
